<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:paddingLeft="@dimen/ph_item_spacing_edge"
    android:paddingRight="@dimen/ph_item_spacing_edge">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ph_text_size_medium"
        android:padding="@dimen/ph_item_spacing"
        android:text="@string/demo_text_header"/>
    <se.lightside.placeholder.widget.BlockedOutTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ph_block_gray"
        android:text="@string/lorem_ipsum"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">
        <se.lightside.placeholder.widget.BlockedOutTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#666"
            android:text="@string/lorem_ipsum"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:adjustViewBounds="true"
            android:padding="@dimen/ph_item_spacing"
            android:src="@drawable/ph_photo_water"/>
    </LinearLayout>
</LinearLayout>